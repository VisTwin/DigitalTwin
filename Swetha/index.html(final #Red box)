<!-- ================= SCRIPT ================= -->
<script>
const socket = io();

/* ========== VOICE ========== */
let recognition = null;

function startVoice() {
    document.getElementById("status").innerText = "STATUS: Listening";

    recognition = new (window.SpeechRecognition || window.webkitSpeechRecognition)();
    recognition.lang = "en-US";
    recognition.start();

    recognition.onresult = (event) => {
        const text = event.results[0][0].transcript;
        document.getElementById("voice_log").innerText = "Voice log: " + text;

        fetch("/voice", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ text: text })
        });
    };

    recognition.onerror = () => {
        document.getElementById("status").innerText = "STATUS: Error";
    };
}

function resetVoice() {
    if (recognition) recognition.stop();
    document.getElementById("voice_log").innerText = "Voice log:";
    document.getElementById("status").innerText = "STATUS: Rest";
}

/* ========== 3D ========== */
let scene, camera, renderer;

window.addEventListener("load", init3D);

function init3D() {
    const container = document.getElementById("robot-3d-view");

    scene = new THREE.Scene();
    scene.background = new THREE.Color(0x222222);

    camera = new THREE.PerspectiveCamera(
        45,
        container.clientWidth / container.clientHeight,
        0.1,
        1000
    );
    camera.position.set(0, 1, 4);
    camera.lookAt(0, 0, 0);

    renderer = new THREE.WebGLRenderer({ antialias: true });
    renderer.setSize(container.clientWidth, container.clientHeight);
    renderer.setPixelRatio(window.devicePixelRatio);
    container.appendChild(renderer.domElement);

    scene.add(new THREE.AmbientLight(0xffffff, 1));

    const light = new THREE.DirectionalLight(0xffffff, 1);
    light.position.set(5, 5, 5);
    scene.add(light);

    // DEBUG CUBE
    const cube = new THREE.Mesh(
        new THREE.BoxGeometry(1, 1, 1),
        new THREE.MeshStandardMaterial({ color: 0xff0000 })
    );
    scene.add(cube);

    window.addEventListener("resize", onResize);
    onResize();
    animate();
}

function onResize() {
    const container = document.getElementById("robot-3d-view");
    const w = container.clientWidth;
    const h = container.clientHeight;

    if (w && h) {
        renderer.setSize(w, h);
        camera.aspect = w / h;
        camera.updateProjectionMatrix();
    }
}

function animate() {
    requestAnimationFrame(animate);
    renderer.render(scene, camera);
}
</script>


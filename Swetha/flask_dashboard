from flask import Flask, render_template, Response, jsonify
import cv2
import random

app = Flask(__name__)

# Placeholder joint angles, positions, status, voice logs
joint_angles = [0]*6
joint_positions = [0]*6
status = "Rest"
voice_logs = {"said": "", "heard": ""}

# --- Live video setup ---
camera = cv2.VideoCapture(0)  # 0 = default laptop camera

def gen_frames():
    while True:
        success, frame = camera.read()
        if not success:
            break
        else:
            ret, buffer = cv2.imencode('.jpg', frame)
            frame = buffer.tobytes()
            yield (b'--frame\r\n'
                   b'Content-Type: image/jpeg\r\n\r\n' + frame + b'\r\n')

@app.route('/')
def index():
    return render_template("dashboard.html")

@app.route('/video_feed')
def video_feed():
    return Response(gen_frames(), mimetype='multipart/x-mixed-replace; boundary=frame')

@app.route('/get_status')
def get_status():
    # For now we generate random joint angles and status for demo
    global joint_angles, joint_positions, status
    joint_angles = [random.randint(0, 180) for _ in range(6)]
    joint_positions = joint_angles
    status = "Moving" if random.random() > 0.5 else "Rest"
    return jsonify({
        "angles": joint_angles,
        "positions": joint_positions,
        "status": status,
        "voice": voice_logs
    })

@app.route('/update_voice/<said>/<heard>')
def update_voice(said, heard):
    voice_logs["said"] = said
    voice_logs["heard"] = heard
    return "OK"

if __name__ == "__main__":
    app.run(host='0.0.0.0', port=5050, debug=True)

